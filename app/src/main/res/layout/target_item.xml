<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/target_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/target_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="2018-04-13" />

        <TextView
            android:id="@+id/target_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="2018-09-14" />

    </LinearLayout>

    <TextView
        android:id="@+id/target_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我要买一辆宝马X系"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/target_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/target_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-04-13"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/target_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/target_countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10天"/>

    </LinearLayout>

</LinearLayout>